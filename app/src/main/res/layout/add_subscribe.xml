<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">
    <!--android:fitsSystemWindows="true" 状态栏不和下方的页面挤在一起-->

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:src="@drawable/back_s_arrow">

        </ImageView>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="10"
                android:gravity="center"
                android:text="添加订阅"
                android:textColor="@color/colorMainFont"
                android:textSize="20sp">

        </TextView>

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:src="@drawable/add_plus">

        </ImageView>
    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="370dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:background="@color/cardBackground"
            android:columnCount="2"
            android:rowCount="5">

        <com.makeramen.roundedimageview.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_columnSpan="2"
                android:layout_marginTop="38dp"
                android:src="@drawable/weibo"
                app:riv_border_color="#FFFFFF"
                app:riv_border_width="0dip"
                app:riv_corner_radius="20dip" />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="微博"
                android:textColor="@color/colorMainFont"
                android:textSize="20sp">

        </TextView>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack"></View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="订阅描述"
                android:textColor="@color/colorMainFont"
                android:textSize="18sp">

        </TextView>


        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:gravity="right"
                android:hint="请输入订阅服务描述"
                android:imeOptions="actionNext"
                android:textColor="@color/colorMainFont"
                android:textColorHint="@color/colorSecondFont"
                android:textSize="15sp">

        </EditText>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack">

        </View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="价格"
                android:textColor="@color/colorMainFont"
                android:textSize="18sp">

        </TextView>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:gravity="right"
                android:hint="¥ 0.00"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@color/colorMainFont"
                android:textColorHint="@color/colorSecondFont"
                android:textSize="15sp">

        </EditText>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack">

        </View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="订阅时间"
                android:textColor="@color/colorMainFont"
                android:textSize="18sp">

        </TextView>

        <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:hint="请选择订阅时间"
                android:textColor="@color/colorMainFont"
                android:textColorHint="@color/colorSecondFont"
                android:textSize="15sp">

        </TextView>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack">

        </View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="订阅类型"
                android:textColor="@color/colorMainFont"
                android:textSize="18sp">

        </TextView>

        <TextView
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint="请选择订阅方式"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@color/colorMainFont"
                android:textColorHint="@color/colorSecondFont"
                android:textSize="15sp">

        </TextView>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack">

        </View>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:text="支付方式"
                android:textColor="@color/colorMainFont"
                android:textSize="18sp">

        </TextView>

        <TextView
                android:id="@+id/method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:hint="请选择支付方式"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:textColor="@color/colorMainFont"
                android:textColorHint="@color/colorSecondFont"
                android:textSize="15sp">

        </TextView>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="2"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:background="@color/lineBlack">

        </View>

    </GridLayout>
</LinearLayout>

