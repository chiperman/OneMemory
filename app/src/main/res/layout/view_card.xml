                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.cardview.widget.CardView
                            android:layout_width="280dp"
                            android:layout_height="250dp"
                            app:cardCornerRadius="20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#f8f8f8">

                            <TextView
                                    android:id="@+id/xiangqing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:text="App Name"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            <View
                                    android:id="@+id/line0"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="20dp"
                                    android:background="#C0C0C0"
                                    app:layout_constraintTop_toBottomOf="@id/xiangqing" />

                            <ImageView
                                    android:id="@+id/money"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/money_grey"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/line0" />

                            <TextView
                                    android:id="@+id/text_money"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="$59.99"
                                    android:textSize="15sp"
                                    app:layout_constraintStart_toStartOf="@+id/money"
                                    app:layout_constraintTop_toBottomOf="@+id/money" />

                            <View
                                    android:id="@+id/line2"
                                    android:layout_width="1dp"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="50dp"
                                    android:layout_marginTop="20dp"
                                    android:background="#C0C0C0"
                                    app:layout_constraintStart_toEndOf="@+id/money"
                                    app:layout_constraintTop_toBottomOf="@+id/line0" />

                            <ImageView
                                    android:id="@+id/calendar"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginRight="50dp"
                                    android:src="@drawable/calendar"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/line0" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="40dp"
                                    android:text="1 month"
                                    android:textSize="15sp"
                                    app:layout_constraintStart_toStartOf="@+id/calendar"
                                    app:layout_constraintTop_toBottomOf="@+id/calendar" />

                            <View
                                    android:id="@+id/line1"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginTop="10dp"
                                    android:background="#C0C0C0"
                                    app:layout_constraintTop_toBottomOf="@+id/text_money" />

                            <ImageView
                                    android:id="@+id/bankcard"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_marginTop="20dp"
                                    android:src="@drawable/bank_card"
                                    app:layout_constraintStart_toStartOf="@+id/money"
                                    app:layout_constraintTop_toBottomOf="@+id/line1" />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:text="银行卡"
                                    android:textSize="15sp"
                                    app:layout_constraintStart_toStartOf="@+id/bankcard"
                                    app:layout_constraintTop_toBottomOf="@+id/bankcard" />

                            <View
